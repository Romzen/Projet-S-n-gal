{% extends "_base.html.twig" %}
{% block style %}{% endblock %}
{% block title %} {{ parent() }} Liste des utilisateurs {% endblock %}
{% block body %}

    <form class="form-inline" method="POST" action="index.php?page=utilisateur" enctype="multipart/form-data" >  
        <div class="container">
            <div class="mui--appbar-height"></div>
            <div class="mui-container-fluid">      
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="center">
                            <h2>Liste des utilisateurs</h2>
                        </div>
                    </div>        

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default panel-table">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col col-xs-6">
                                        <h3 class="panel-title">Rechercher un utilisateur :</h3>
                                    </div>                            
                                </div>
                            </div>
                            <div class="panel-body">
                                <table id="repDataTable1" class="table table-striped table-bordered table-list display" style="min-width : 100%"><form method="POST" action="index.php?page=utilisateur">
                                        <thead>
                                            <tr>
                                                <th>Login</th>
                                                <th>Nom</th>
                                                <th>Prénom</th>
                                                <th>Rôle</th>
                                                <th>Modification</th>
                                                <th>Suppression</th>
                                            </tr>
                                        </thead>                            
                                        <tbody>
                                            {% for u in liste %}
                                                {% for g in listeGrade %}
                                                {% if g.id_grade == u.grade %}

                                                <tr><td>{{u.login}}</td>
                                                    <td>{{u.nom_utilisateur}}</td>
                                                    <td>{{u.prenom_utilisateur}}</td>
                                                    <td>{{g.nom_grade}}</td>
                                                    <td><div class="btn-group btn-group-lg"><a href="index.php?page=modifUtilisateur&id_utilisateur={{u.id_utilisateur}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div></td>
                                                    <td><div class="btn-group btn-group-lg"><a href="index.php?page=utilisateur&id_utilisateur={{u.id_utilisateur}}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></div></td>
                                                </tr>
                                                {% endif %}
                                                {% endfor %}
                                                
                                            {% endfor %}                                
                                        </tbody>
                                    </form>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </form>
{% endblock %}