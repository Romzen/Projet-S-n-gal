{% extends "_base.html.twig" %}
{% block title %} {{ parent() }} Droits des utilisateurs {% endblock %}
{% block body %}
    
<!--<div id="content-wrapper">-->
        <div class="container">
        <div class="mui--appbar-height"></div>
        <div class="mui-container-fluid">
	<div class="panel panel-default">
            
	<div class="panel-heading">
        <div class="center"> <h2>Droits des utilisateurs</h2></div>
        </div> 
            
                <div class="panel-body">
                    <div class="row">
                        <table style="min-width : 100%" class="table table-striped table-bordered table-list">
                            <thead>
                                <tr>
                                    <th>Grade</th>
                                    <th>Droits</th>
                                </tr>
                            </thead>
                            <tbody>
                               {% for g in lesGrades %}
                                   <tr> 
                                       <td>{{g.nom_grade}}</td>
                                        <td>{% for d in g.droit %}
                                            {{d}}<br>
                                            {% endfor %}
                                        </td>
                                       
                                   </tr>
                               {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
        
        </div>
	</div>
        </div>
{%endblock%}