{% extends "_base.html.twig" %}
{% block title %} {{ parent() }} RDV du jour {% endblock %}
{% block body %}

    <form class="form-group" method="POST" action="index.php?page=listeRDVJour" enctype="multipart/form-data" >
        <!--<div id="content-wrapper">-->
        <div class="container">
            <div class="mui--appbar-height"></div>
            <div class="mui-container-fluid">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="center">
                            <h2>Liste des rendez-vous du jour</h2>
                        </div>
                    </div>
                </div>
                
                {%if form.valide1 == false%}
                <div class="alert alert-danger" role="alert"><center>{{form.message1}}</center></div>                
                {%endif%}
                {%if form.valide2 == true%}
                        <div class="alert alert-success" role="alert">{{form.message2}}</div>
                {%endif%}

                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default panel-table">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col col-xs-6">
                                        <h3 class="panel-title">Liste des rendez-vous</h3>
                                    </div>
                                    <!--<div class="col col-xs-6 text-right">
                                            <button type="button" class="btn btn-sm btn-primary btn-create">Create New</button>
                                    </div>-->
                                </div>
                            </div>
                            <div class="panel-body">
                                <table style="min-width : 100%" id="repDataTable1" class="table table-striped table-bordered table-list display">                                
                                    <thead>
                                        <tr>
                                            <th>Nombre RDV :</th>
                                            <th>{{form.nombreRDV}}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr><th>Patient</th><th>Date du RDV</th><th>Etat du RDV</th><th>Présent au RDV</th><th>Absent au RDV</th></tr>

                                        {% for lp in listeP%}

                                            <tr>
                                                <td><a href="index.php?page=fichePatient&id_patient={{lp.id_patient}}">{{lp.num_id_national}}</a></td>
                                                <td>{{lp.rdv}}</td>
                                                <td>{{lp.etat}}</td>
                                                <td><input type="checkbox" name="cocher[]" id="cocher[]"value="{{lp.id_dispensation}}"/></td>
                                                <td><input type="checkbox" name="cocherAbs[]" id="cocherAbs[]"value="{{lp.id_dispensation}}"/></td>
                                            </tr>

                                        {%endfor%}
                                    </tbody>                                
                                </table>
                            </div>
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col col-xs-4">Valider la présence</div>
                                    <div class="col col-xs-8">
                                        <div class="form-group" style="float : right">
                                            <a class="btn btn-default" href="index.php?page=listeRDV" role="button">Précédent</a>
                                            <button type="submit" class="btn btn-warning" id="btValider" name="btValider">Valider</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{%endblock%}