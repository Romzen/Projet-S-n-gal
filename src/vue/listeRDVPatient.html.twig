{% extends "_base.html.twig" %}
{% block title %} {{ parent() }} RDV du patient {% endblock %}
{% block body %}

    <form class="form-group" method="POST" action="index.php?page=listeRDVPatient" enctype="multipart/form-data" >
        <!--<div id="content-wrapper">-->
        <div class="container">
            <div class="mui--appbar-height"></div>
            <div class="mui-container-fluid">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="center">
                            <h2>Liste des rendez-vous du patient</h2>
                        </div>
                    </div>
                </div>  

                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default panel-table">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col col-xs-6">
                                        <h3 class="panel-title">Liste des rendez-vous</h3>
                                    </div>
                                    <!--<div class="col col-xs-6 text-right">
                                            <button type="button" class="btn btn-sm btn-primary btn-create">Create New</button>
                                    </div>-->
                                </div>
                            </div>
                            <div class="panel-body">
                                <table style="min-width : 100%" id="repDataTable1" class="table table-striped table-bordered table-list display">                                
                                    <thead>
                                        <tr>
                                            <th>Nombre RDV :</th>
                                            <th>{{form.nombreRDV}}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr><th>Patient</th><th>Date du RDV</th><th>Etat du RDV</th></tr>

                                        {% for lr in listeRDV%}

                                            <tr>
                                                <td><a href="index.php?page=fichePatient&id_patient={{lr.id_patient}}">{{lr.num_id_national}}</a></td>
                                                <td>{{lr.rdv}}</td>
                                                <td>{{lr.etat}}</td>
                                            </tr>

                                        {%endfor%}
                                    </tbody>                                
                                </table>
                            </div>
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col col-xs-4"></div>
                                    <div class="col col-xs-8">
                                        <div class="form-group" style="float : right">
                                            <a class="btn btn-default" value="back" onclick="history.go(-1)" role="button">Précédent</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{%endblock%}